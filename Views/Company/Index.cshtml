@model List<LR12_2.Models.Company>

@{
    <h2>Companies</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Id</td>
                    <td>@company.Name</td>
                    <td>@company.Location</td>
                </tr>
            }
        </tbody>
    </table>
}
