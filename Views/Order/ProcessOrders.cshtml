@model List<Product>

@{
    ViewData["Title"] = "Order Pizzas Forms";
}

<div style="display: flex; justify-content:space-around;">
    @for (int i = 0; i < @Model.Count; i++)
    {
        <div>
            <h1>Your pizza #@(i + 1):</h1>
            <div>Name: @Model[@i].Name</div>
            <div>Price: @Model[@i].Price</div>
            <br />
        </div>

    }
</div>
